# Cloudflare Configuration
CLOUDFLARE_EMAIL=your-email@example.com
CLOUDFLARE_API_KEY=your-cloudflare-api-key
CLOUDFLARE_ZONE_ID=your-zone-id
CLOUDFLARE_API_TOKEN=your-api-token

# R2 Storage Configuration
R2_ACCOUNT_ID=your-account-id
R2_ACCESS_KEY_ID=your-access-key-id
R2_SECRET_ACCESS_KEY=your-secret-access-key
R2_BUCKET_NAME=your-bucket-name
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com

# Signing Secret (generate with: openssl rand -hex 32)
SIGNING_SECRET=your-signing-secret-here

# imgproxy Configuration (generate with: openssl rand -hex 32)
IMGPROXY_KEY=your-imgproxy-key
IMGPROXY_SALT=your-imgproxy-salt

# Database Configuration
DATABASE_URL=postgresql://user:password@host:5432/database
HASURA_DATABASE_URL=postgresql://user:password@host:5432/hasura

# Hasura Configuration
HASURA_ADMIN_SECRET=your-hasura-admin-secret
HASURA_JWT_SECRET='{"type":"HS256","key":"your-jwt-secret-here"}'

# Traefik Dashboard Authentication (generate with: htpasswd -nb admin password)
TRAEFIK_DASHBOARD_AUTH=admin:$apr1$...

# Node Environment
NODE_ENV=production
PORT=3000
